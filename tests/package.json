{
  "name": "fusion-fc-storage-tests",
  "version": "1.0.0",
  "description": "Tests for Firebase Storage security rules",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:avatar": "jest storage-rules-avatar.test.js",
    "test:emulator": "firebase emulators:exec --only storage 'npm run test'"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.1",
    "firebase": "^10.7.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testTimeout": 30000
  }
}
